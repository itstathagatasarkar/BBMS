<Window x:Class="BBMS.PL.InventoryForBlood"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BBMS.PL"
        mc:Ignorable="d"
        Title="InventoryForBlood" Height="300" Width="300">
    <Grid>
        <Button Content="Display Inventory" HorizontalAlignment="Left" Margin="61,162,0,0" VerticalAlignment="Top" Width="173" Background="Yellow" FontSize="14" FontWeight="Bold" Click="Button_Click"/>
        <Button x:Name="btn_add_to_inventory" Content="Add To Inventory" HorizontalAlignment="Left" Margin="61,83,0,0" VerticalAlignment="Top" Width="173" Background="Yellow" FontSize="14" FontWeight="Bold" Click="btn_add_to_inventory_Click"/>
        <Button x:Name="btn_update_inventory" Content="Update Inventory Record" HorizontalAlignment="Left" Height="25" Margin="61,122,0,0" VerticalAlignment="Top" Width="173" Background="Yellow" FontSize="14" FontWeight="Bold" Click="btn_update_inventory_Click"/>
        <Grid.Background>
            <ImageBrush ImageSource="inventory.jpg"/>
        </Grid.Background>
    </Grid>
</Window>
