        <Label Content="Camp Name" HorizontalAlignment="Left" Margin="16,140,0,0" VerticalAlignment="Top"/>
        <DatePicker Name="dp_start_date" HorizontalAlignment="Left" Margin="232,259,0,0" VerticalAlignment="Top"/>
